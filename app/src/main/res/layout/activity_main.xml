<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statement1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/SCV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/SCV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pg9_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/pg9_outer"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner2"
                android:layout_marginVertical="16dp"
                >
                
                <ImageView
                    android:id="@+id/pg9_iv1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    
                    />
                
                <TextView
                    android:id="@+id/pg9_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv1"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner1"
                    />
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner1"
                app:layout_constraintTop_toTopOf="@id/pg9_outer"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner3"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv2"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner2"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner2"
                app:layout_constraintTop_toTopOf="@id/pg9_outer"
                app:layout_constraintEnd_toEndOf="@id/pg9_outer"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv3"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner3"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/pg9_outer"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner1"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner5"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv4"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner4"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner4"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner2"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner6"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv5"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner5"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner5"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner3"
                app:layout_constraintEnd_toEndOf="@id/pg9_outer"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv6"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner6"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/pg9_outer"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner4"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner8"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv7"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner7"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner7"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner5"
                app:layout_constraintEnd_toStartOf="@id/pg9_inner9"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv8"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner8"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pg9_inner9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pg9_inner8"
                app:layout_constraintTop_toBottomOf="@id/pg9_inner6"
                app:layout_constraintEnd_toEndOf="@id/pg9_outer"
                android:layout_marginVertical="16dp"
                >

                <ImageView
                    android:id="@+id/pg9_iv9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe_square"
                    android:clickable="true"
                    android:onClick="Recipe1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/pg9_tv9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    app:layout_constraintTop_toBottomOf="@id/pg9_iv9"
                    app:layout_constraintStart_toStartOf="@id/pg9_inner9"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>